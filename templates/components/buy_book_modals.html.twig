<div class="modal fade" id="buy-book-modal" tabindex="-1" role="dialog"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Order a book "<b id="buy-book-name"></b>", author <b id="buy-book-author"></b> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="check-mail-params"></div>
                <div id="buy-book-modal-body">
                    <div class="input-group mb-3">
                        <input class="form-control input-sm" type="text" id="customer-name" minlength="3" placeholder="Enter your name" required>
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="customer-name">Name</label>
                        </div>
                    </div>
                </div>
                <div id="buy-book-modal-body">
                    <div class="input-group mb-3">
                        <input class="form-control input-sm" type="email" id="customer-email" placeholder="Enter your name" required>
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="customer-email">Email</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button id="send-mail" class="btn btn-primary btn-sm" disabled>send mail</button>
            </div>
        </div>
    </div>
</div>